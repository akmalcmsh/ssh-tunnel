[Unit]
Description=SSH tunnel (%i)
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/default/ssh-tunnel-%i
ExecStart=/usr/local/bin/ssh-tunnel.sh
Restart=always
RestartSec=5s
User=system
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full

[Install]
WantedBy=multi-user.target